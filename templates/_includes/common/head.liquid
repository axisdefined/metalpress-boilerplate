<!DOCTYPE html>
<head>
  <title>{% if title %}{{ site.title }} - {{ title }}{% else %}{{ site.title }}{% endif %}</title>
  
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge;chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="{% if excerpt %}{{ excerpt | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.meta.description }}{% endif %}">

  {% if site.meta.keywords %}
  <meta name="keywords" content="{{ site.meta.keywords | join: ', ' }}">
  {% endif %}

  <meta http-equiv="cache-control" content="max-age=604800;private">

  {% if site.meta.twitter %}
  <!-- Twitter Cards -->
  {% if image.feature %}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:image" content="{{ site.url }}/assets/img/{{ image.feature }}">
  {% else %}
  <meta name="twitter:card" content="summary">
  <meta name="twitter:image" content="{{ site.url }}/assets/img/{{ site.meta.twitter.img }}">
  {% endif %}
  <meta name="twitter:title" content="{{ site.meta.twitter.title }}">
  <meta name="twitter:description" content="{{ site.meta.twitter.description }}">
  <meta name="twitter:creator" content="@{{ site.meta.twitter.handle }}">
  {% endif %}

  {% if site.meta.facebook %}
  <!-- Open Graph -->
  <meta property="og:locale" content="en_US">
  <meta property="og:type" content="article">
  <meta property="og:title" content="{{ site.meta.facebook.title }}">
  <meta property="og:description" content="{{ site.meta.facebook.description }}">
  <meta property="og:url" content="{{ site.meta.facebook.url }}">
  <meta property="og:image" content="{{ site.url }}/assets/img/{{ site.meta.facebook.img }}">
  <meta property="og:site_name" content="{{ site.meta.facebook.title }}">
  {% endif %}
  
  <!-- Favicon -->
  <link rel="shortcut icon" href="/assets/img/favicon.ico" type="image/x-icon">
  
  <!-- Vendor Styles -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  <!-- Styles -->
  <link rel="stylesheet" href="/{{ fingerprint | get: 'assets/css/main.css' }}">
  <link rel="canonical" href="{{ url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url }}">

  <!--[if IE]>
    <link rel="stylesheet" type="text/css" href="{{ '/assets/css/ie-styles.css' | prepend: site.baseurl | prepend: site.url }}" />
  <![endif]-->
</head>
